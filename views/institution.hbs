        // JavaScript to manage hidden input value based on dropdown selection
        const selectElement = document.querySelector('select[name="role"]');
        const hiddenInput = document.querySelector('input[type="hidden"][name="role"]');

        selectElement.addEventListener('change', function () {
            hiddenInput.value = this.value; // Update hidden input value based on select option
        });
</script>