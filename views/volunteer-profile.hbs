    {{/if}}
    <h3 style="font-size: 1.5rem; margin-bottom: 0.5rem;">Welcome, {{fullName}}</h3>
    <p style="color: var(--text-secondary); font-size: 1.25rem;">Volunteer</p>
</div>

             
            <nav class="nav-menu">
                <button class="nav-button active" data-section="dashboard">
                    <i class='bx bx-home'></i>
                    Dashboard
                </button>
                <button class="nav-button" data-section="profile">
                    <i class='bx bx-user'></i>
                    Complete Profile
                </button>
                <button class="nav-button">
                    <i class='bx bx-star'></i>
                    Rate Patient Behaviour
                </button>
                <button class="nav-button">
                    <i class='bx bx-bell'></i>
                    Notifications
                </button>
                <button class="nav-button">
                    <i class='bx bx-time'></i>
                    Time Tracking
               <!-- Inside the nav-menu -->

<!-- New button for redirecting to volunteerhome -->
<a href="/volunteer-services" style="text-decoration: none;">
    <button class="nav-button">
        <i class='bx bx-home'></i>
    Provide srevice
    </button>
</a>
