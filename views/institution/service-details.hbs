        });
    }
    
    // View volunteer profile button
    const viewProfileBtn = document.getElementById('viewVolunteerProfile');
    if (viewProfileBtn) {
        viewProfileBtn.addEventListener('click', function() {
            const volunteerId = this.getAttribute('data-id');
            window.location.href = `/volunteer-profile/${volunteerId}`;
        });
    }
}

