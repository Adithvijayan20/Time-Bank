<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Volunteers</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 10px 15px;
            margin: 5px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
        }

        .view-btn {
            background-color: #4CAF50;
        }

        .delete-btn {
            background-color: #f44336;
        }

        .delete-form {
            display: inline;
        }

        .no-volunteers {
            text-align: center;
            color: #ff4d4d;
            font-size: 18px;
            margin-top: 20px;
        }
        .submit-button {
            display: inline-block;
            background-color: rgb(95, 95, 167);
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
        }

        .submit-button:hover {
            background-color:  rgb(95, 95, 167);
        }
    </style>
</head>
<body>
<a href="/institutionhome" class="submit-button">Back</a>
    <h1>Volunteers List</h1>

    <!-- Check if there are volunteers -->
    {{#if viewvolunteers}}
        {{#if viewvolunteers.length}}
            <!-- Table to display volunteers -->
            <table>
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Age</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Skills</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each viewvolunteers}}
                        <tr>
                            <td>{{this.fullName}}</td>
                            <td>{{this.age}}</td>
                            <td>{{this.phone}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.skill}}</td>
                            <td class="button-group">
                                <form action="/institution/vieweachvolunteer/{{this._id}}" method="GET">
                                    <button type="submit" class="btn view-btn">View</button>
                                </form>
                                <form action="/institution/viewvolunteers/delete/{{this._id}}" method="POST" class="delete-form" onsubmit="return confirmDelete()">
                                    <button type="submit" class="btn delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p class="no-volunteers">No Volunteers Found</p>
        {{/if}}
    {{else}}
        <p class="no-volunteers">No Volunteers Found</p>
    {{/if}}

</body>
</html>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this volunteer?");
    }
</script>
