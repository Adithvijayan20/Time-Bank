<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Services - {{institutionName}}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4a6fdc;
            --secondary-color: #6c8dfa;
            --accent-color: #3d5ab8;
            --text-color: #333;
            --light-gray: #f8f9fa;
            --medium-gray: #e9ecef;
            --border-color: #dee2e6;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
            --info-color: #17a2b8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-gray);
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border-color);
        }

        .header h1 {
            color: var(--primary-color);
            font-size: 2rem;
            font-weight: 700;
        }

        .header .institution-info {
            display: flex;
            align-items: center;
        }

        .header .institution-name {
            margin-left: 10px;
            font-weight: 600;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .stat-card .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .stat-card .stat-title {
            font-size: 0.9rem;
            color: #666;
            font-weight: 600;
        }

        .stat-card .stat-icon {
            width: 40px;
            height: 40px;
            background-color: rgba(74, 111, 220, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-color);
        }

        .stat-card .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-color);
        }

        .stat-card .stat-change {
            font-size: 0.8rem;
            color: var(--success-color);
            display: flex;
            align-items: center;
        }

        .filters {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .filters-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .filters-title {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .filters-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .filter-group {
            margin-bottom: 10px;
        }

        .filter-group label {
            display: block;
            margin-bottom: 5px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .filter-group select, .filter-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--border-color);
            border-radius: 5px;
            font-size: 0.9rem;
        }

        .filter-actions {
            display: flex;
            justify-content: flex-end;
            margin-top: 15px;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--accent-color);
        }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-color);
            margin-right: 10px;
        }

        .btn-outline:hover {
            background-color: var(--light-gray);
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .service-card {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }

        .service-header {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
            position: relative;
        }

        .service-type {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .type-medical {
            background-color: rgba(23, 162, 184, 0.1);
            color: var(--info-color);
        }

        .type-companionship {
            background-color: rgba(40, 167, 69, 0.1);
            color: var(--success-color);
        }

        .type-transportation {
            background-color: rgba(255, 193, 7, 0.1);
            color: var(--warning-color);
        }

        .service-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .service-date {
            font-size: 0.8rem;
            color: #666;
            display: flex;
            align-items: center;
        }

        .service-date i {
            margin-right: 5px;
        }

        .service-content {
            padding: 20px;
        }

        .service-details {
            margin-bottom: 15px;
        }

        .detail-row {
            display: flex;
            margin-bottom: 10px;
        }

        .detail-label {
            font-size: 0.9rem;
            color: #666;
            width: 40%;
        }

        .detail-value {
            font-size: 0.9rem;
            font-weight: 500;
            width: 60%;
        }

        .service-actions {
            display: flex;
            margin-top: 15px;
        }

        .service-actions .btn {
            flex: 1;
            text-align: center;
            padding: 8px 0;
            font-size: 0.9rem;
        }

        .service-status {
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
        }

        .status-inprogress {
            background-color: var(--primary-color);
        }

        .status-completed {
            background-color: var(--success-color);
        }

        .status-overdue {
            background-color: var(--danger-color);
        }

        .pagination {
            display: flex;
            justify-content: center;
            list-style: none;
            margin: 30px 0;
        }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 5px;
            border: 1px solid var(--border-color);
            background-color: white;
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .pagination a:hover {
            background-color: var(--light-gray);
        }

        .pagination .active a {
            background-color: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .empty-state i {
            font-size: 3rem;
            color: var(--medium-gray);
            margin-bottom: 20px;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: var(--text-color);
        }

        .empty-state p {
            color: #666;
            max-width: 500px;
            margin: 0 auto 20px;
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .header .institution-info {
                margin-top: 15px;
            }
            
            .services-grid {
                grid-template-columns: 1fr;
            }
            
            .filters-content {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Active Services</h1>
            <div class="institution-info">
                <i class="fas fa-hospital fa-lg" style="color: var(--primary-color);"></i>
                <span class="institution-name">{{institutionName}}</span>
            </div>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Total Active Services</div>
                    <div class="stat-icon">
                        <i class="fas fa-hand-holding-medical"></i>
                    </div>
                </div>
                <div class="stat-value" id="totalActiveCount">0</div>
                <div class="stat-change"><i class="fas fa-arrow-up"></i> 12% from last month</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Completed Services</div>
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
                <div class="stat-value" id="completedCount">0</div>
                <div class="stat-change"><i class="fas fa-arrow-up"></i> 5% from last month</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">In Progress</div>
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
                <div class="stat-value" id="inProgressCount">0</div>
                <div class="stat-change"><i class="fas fa-arrow-down"></i> 3% from last month</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Volunteers Engaged</div>
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="stat-value" id="volunteersCount">0</div>
                <div class="stat-change"><i class="fas fa-arrow-up"></i> 8% from last month</div>
            </div>
        </div>

        <div class="filters">
            <div class="filters-header">
                <div class="filters-title">Filter Services</div>
                <button id="toggleFilters" class="btn btn-outline">
                    <i class="fas fa-filter"></i> Filters
                </button>
            </div>
            <div class="filters-content" id="filtersContent" style="display: none;">
                <div class="filter-group">
                    <label for="statusFilter">Status</label>
                    <select id="statusFilter">
                        <option value="">All Statuses</option>
                        <option value="assigned">Assigned</option>
                        <option value="in-progress">In Progress</option>
                        <option value="completed">Completed</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="serviceTypeFilter">Service Type</label>
                    <select id="serviceTypeFilter">
                        <option value="">All Types</option>
                        <option value="medical">Medical</option>
                        <option value="companionship">Companionship</option>
                        <option value="transportation">Transportation</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="dateFilter">Date Range</label>
                    <input type="date" id="dateFilter">
                </div>
                
                <div class="filter-group">
                    <label for="volunteerFilter">Volunteer</label>
                    <select id="volunteerFilter">
                        <option value="">All Volunteers</option>
                        <!-- Volunteer options will be populated by JavaScript -->
                    </select>
                </div>
                
                <div class="filter-actions">
                    <button id="resetFilters" class="btn btn-outline">Reset</button>
                    <button id="applyFilters" class="btn btn-primary">Apply Filters</button>
                </div>
            </div>
        </div>

        {{#if activeServicesList.length}}
            <div class="services-grid" id="servicesGrid">
                {{#each activeServicesList}}
                <div class="service-card" data-status="{{this.status}}" data-service-type="{{this.requestDetails.serviceType}}">
                    <div class="service-status {{#if (eq this.status 'completed')}}status-completed{{else if (eq this.status 'assigned')}}status-inprogress{{else}}status-overdue{{/if}}"></div>
                    <div class="service-header">
                        <div class="service-type {{#if (eq this.requestDetails.serviceType 'medical')}}type-medical{{else if (eq this.requestDetails.serviceType 'companionship')}}type-companionship{{else}}type-transportation{{/if}}">
                            {{this.requestDetails.serviceType}}
                        </div>
                        <h3 class="service-title">{{this.requestDetails.patientNeeds}}</h3>
                        <div class="service-date">
                            <i class="far fa-calendar-alt"></i> Assigned: {{toFixed this.assignedDate "MMM DD, YYYY"}}
                        </div>
                    </div>
                    
                    <div class="service-content">
                        <div class="service-details">
                            <div class="detail-row">
                                <div class="detail-label">Patient:</div>
                                <div class="detail-value">{{this.requestDetails.patientName}}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">Volunteer:</div>
                                <div class="detail-value">{{this.volunteerName}}</div>
                            </div>
                            <div class="detail-row">
                                <div class="detail-label">Status:</div>
                                <div class="detail-value">{{this.status}}</div>
                            </div>
                            {{#if this.requestDetails.date}}
                            <div class="detail-row">
                                <div class="detail-label">Service Date:</div>
                                <div class="detail-value">{{this.requestDetails.date}}</div>
                            </div>
                            {{/if}}
                            {{#if this.requestDetails.time}}
                            <div class="detail-row">
                                <div class="detail-label">Service Time:</div>
                                <div class="detail-value">{{this.requestDetails.time}}</div>
                            </div>
                            {{/if}}
                            {{#if this.requestDetails.location}}
                            <div class="detail-row">
                                <div class="detail-label">Location:</div>
                                <div class="detail-value">{{this.requestDetails.location}}</div>
                            </div>
                            {{/if}}
                        </div>
                        
                        <div class="service-actions">
                            <button class="btn btn-outline view-details" data-id="{{this._id}}">View Details</button>
                            {{#if (eq this.status 'assigned')}}
                            <button class="btn btn-primary mark-complete" data-id="{{this._id}}">Mark as Complete</button>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            
            <ul class="pagination">
                <li><a href="#"><i class="fas fa-chevron-left"></i></a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#"><i class="fas fa-chevron-right"></i></a></li>
            </ul>
        {{else}}
            <div class="empty-state">
                <i class="fas fa-clipboard-list"></i>
                <h3>No Active Services Found</h3>
                <p>There are currently no active services to display. Once volunteers are assigned to requests, they will appear here.</p>
                <a href="/institution/notifications" class="btn btn-primary">View Pending Requests</a>
            </div>
        {{/if}}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle filters visibility
            const toggleFilters = document.getElementById('toggleFilters');
            const filtersContent = document.getElementById('filtersContent');
            
            if (toggleFilters) {
                toggleFilters.addEventListener('click', function() {
                    if (filtersContent.style.display === 'none') {
                        filtersContent.style.display = 'grid';
                        toggleFilters.innerHTML = '<i class="fas fa-times"></i> Close';
                    } else {
                        filtersContent.style.display = 'none';
                        toggleFilters.innerHTML = '<i class="fas fa-filter"></i> Filters';
                    }
                });
            }
            
            // Calculate and update statistics
            updateStatistics();
            
            // Initialize filters
            initializeFilters();
            
            // Handle view details button
            const viewDetailsButtons = document.querySelectorAll('.view-details');
            viewDetailsButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const serviceId = this.getAttribute('data-id');
                    // Redirect to details page or show modal
                    window.location.href = `/institution/service-details/${serviceId}`;
                });
            });
            
            // Handle mark as complete button
            const markCompleteButtons = document.querySelectorAll('.mark-complete');
            markCompleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const serviceId = this.getAttribute('data-id');
                    if (confirm('Are you sure you want to mark this service as complete?')) {
                        // Send AJAX request to update status
                        fetch(`/institution/complete-service/${serviceId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Refresh the page or update UI
                                window.location.reload();
                            } else {
                                alert('Error updating service status. Please try again.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('An error occurred. Please try again.');
                        });
                    }
                });
            });
        });
        
        function updateStatistics() {
            // Get all service cards
            const serviceCards = document.querySelectorAll('.service-card');
            
            // Initialize counters
            let totalActive = serviceCards.length;
            let completed = 0;
            let inProgress = 0;
            let uniqueVolunteers = new Set();
            
            // Count different statuses
            serviceCards.forEach(card => {
                const status = card.getAttribute('data-status');
                if (status === 'completed') {
                    completed++;
                } else {
                    inProgress++;
                }
                
                // Extract volunteer ID (assuming it's available in the DOM)
                const volunteerElement = card.querySelector('.detail-value:nth-of-type(2)');
                if (volunteerElement) {
                    uniqueVolunteers.add(volunteerElement.textContent.trim());
                }
            });
            
            // Update DOM elements
            document.getElementById('totalActiveCount').textContent = totalActive;
            document.getElementById('completedCount').textContent = completed;
            document.getElementById('inProgressCount').textContent = inProgress;
            document.getElementById('volunteersCount').textContent = uniqueVolunteers.size;
        }
        
        function initializeFilters() {
            // Get filter elements
            const statusFilter = document.getElementById('statusFilter');
            const serviceTypeFilter = document.getElementById('serviceTypeFilter');
            const dateFilter = document.getElementById('dateFilter');
            const volunteerFilter = document.getElementById('volunteerFilter');
            const applyFiltersBtn = document.getElementById('applyFilters');
            const resetFiltersBtn = document.getElementById('resetFilters');
            
            // Populate volunteer filter options
            populateVolunteerOptions();
            
            // Apply filters event
            if (applyFiltersBtn) {
                applyFiltersBtn.addEventListener('click', function() {
                    filterServices();
                });
            }
            
            // Reset filters event
            if (resetFiltersBtn) {
                resetFiltersBtn.addEventListener('click', function() {
                    if (statusFilter) statusFilter.value = '';
                    if (serviceTypeFilter) serviceTypeFilter.value = '';
                    if (dateFilter) dateFilter.value = '';
                    if (volunteerFilter) volunteerFilter.value = '';
                    filterServices();
                });
            }
        }
        
        function populateVolunteerOptions() {
            const volunteerFilter = document.getElementById('volunteerFilter');
            if (!volunteerFilter) return;
            
            // Get all unique volunteers
            const uniqueVolunteers = new Set();
            const volunteerElements = document.querySelectorAll('.service-card .detail-row:nth-child(2) .detail-value');
            
            volunteerElements.forEach(element => {
                const volunteerName = element.textContent.trim();
                if (volunteerName) {
                    uniqueVolunteers.add(volunteerName);
                }
            });
            
            // Add options to select
            uniqueVolunteers.forEach(name => {
                const option = document.createElement('option');
                option.value = name;
                option.textContent = name;
                volunteerFilter.appendChild(option);
            });
        }
        
        function filterServices() {
            const statusFilter = document.getElementById('statusFilter');
            const serviceTypeFilter = document.getElementById('serviceTypeFilter');
            const dateFilter = document.getElementById('dateFilter');
            const volunteerFilter = document.getElementById('volunteerFilter');
            
            const statusValue = statusFilter ? statusFilter.value : '';
            const typeValue = serviceTypeFilter ? serviceTypeFilter.value : '';
            const dateValue = dateFilter ? dateFilter.value : '';
            const volunteerValue = volunteerFilter ? volunteerFilter.value : '';
            
            // Get all service cards
            const serviceCards = document.querySelectorAll('.service-card');
            
            // Filter cards
            serviceCards.forEach(card => {
                let visible = true;
                
                // Status filter
                if (statusValue && card.getAttribute('data-status') !== statusValue) {
                    visible = false;
                }
                
                // Service type filter
                if (typeValue && card.getAttribute('data-service-type') !== typeValue) {
                    visible = false;
                }
                
                // Date filter - This is more complex and would need the date to be in a standard format
                // For simplicity, we're not implementing this filter logic completely
                
                // Volunteer filter
                if (volunteerValue) {
                    const volunteerElement = card.querySelector('.detail-row:nth-child(2) .detail-value');
                    if (!volunteerElement || volunteerElement.textContent.trim() !== volunteerValue) {
                        visible = false;
                    }
                }
                
                // Show or hide card
                card.style.display = visible ? 'block' : 'none';
            });
            
            // Update statistics after filtering
            updateFilteredStatistics();
        }
        
        function updateFilteredStatistics() {
            // Get visible service cards
            const visibleCards = document.querySelectorAll('.service-card[style="display: block"]');
            
            // Update stats based on visible cards only
            let totalActive = visibleCards.length;
            let completed = 0;
            let inProgress = 0;
            let uniqueVolunteers = new Set();
            
            visibleCards.forEach(card => {
                const status = card.getAttribute('data-status');
                if (status === 'completed') {
                    completed++;
                } else {
                    inProgress++;
                }
                
                const volunteerElement = card.querySelector('.detail-value:nth-of-type(2)');
                if (volunteerElement) {
                    uniqueVolunteers.add(volunteerElement.textContent.trim());
                }
            });
            
            document.getElementById('totalActiveCount').textContent = totalActive;
            document.getElementById('completedCount').textContent = completed;
            document.getElementById('inProgressCount').textContent = inProgress;
            document.getElementById('volunteersCount').textContent = uniqueVolunteers.size;
        }
    </script>
</body>
</html>