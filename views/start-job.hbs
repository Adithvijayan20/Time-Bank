<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Start Job</title>
    <style>
        /* General Page Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        /* Job Card */
        .job-card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 350px;
        }

        /* Headings */
        h2 {
            color: #333;
        }

        /* Subtext */
        .sub-text {
            color: #777;
            font-size: 14px;
        }

        /* Job Details */
        .details {
            margin: 10px 0;
            color: #444;
        }

        /* Labels */
        label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
            color: #555;
        }

        /* Input Fields */
        input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        /* Buttons */
        button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        /* Hover effect */
        button:hover {
            background-color: #0056b3;
        }

        /* Disabled Button */
        button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        /* Timer Section */
        .timer-label {
            font-size: 18px;
            font-weight: bold;
            margin: 15px 0;
        }

        /* Hidden Class */
        .hidden {
            display: none;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="job-card">
            <h2>Start Job</h2>
            <p class="sub-text">Help the patient by completing the service.</p>

            <div class="details">
                <p><strong>Volunteer:</strong> {{match.volunteerName}}</p>
                <p><strong>Patient Email:</strong> {{match.patientEmail}}</p>
            </div>

            <!-- Start OTP Section -->
            <div id="start-section">
                <label for="startOtpInput">Enter Start OTP:</label>
                <input type="text" id="startOtpInput">
                <button onclick="startJob()">Start Job</button>
            </div>

            <!-- Timer & End OTP Section (Initially Hidden) -->
            <div id="timer-section" class="hidden">
                <p class="timer-label">Timer: <span id="timer">00:00:00</span></p>

                <label for="endOtpInput">Enter End OTP:</label>
                <input type="text" id="endOtpInput" disabled>
                <button onclick="endJob()" id="endBtn" disabled>End Job</button>
            </div>
        </div>
    </div>

    <script>
        let timer;
        let seconds = 0;

        function startJob() {
            const otp = document.getElementById("startOtpInput").value;

            fetch("/volunteer-job/start-job", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ matchId: "{{match._id}}", otp })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById("start-section").classList.add("hidden");
                    document.getElementById("timer-section").classList.remove("hidden");
                    document.getElementById("endOtpInput").disabled = false;
                    document.getElementById("endBtn").disabled = false;

                    timer = setInterval(() => {
                        seconds++;
                        document.getElementById("timer").innerText = new Date(seconds * 1000).toISOString().substr(11, 8);
                    }, 1000);
                } else {
                    alert("Invalid OTP!");
                }
            });
        }

        function endJob() {
            const otp = document.getElementById("endOtpInput").value;

            fetch("/volunteer-job/end-job", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ matchId: "{{match._id}}", otp })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    clearInterval(timer);
                    alert("Job Completed!");
                    window.location.href = "/volunteer-dashboard";
                } else {
                    alert("Invalid End OTP!");
                }
            });
        }
    </script>

</body>
</html>
